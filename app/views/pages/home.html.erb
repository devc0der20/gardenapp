<div class="border-bottom mb-3">
  <div class="container justify-content-between align-items-center">
    <%= render 'shared/header' %>
  </div>
</div>
<div class="container justify-content-around align-items-center">
  <div class="row justify-content-center">
    <div class="col-sm col-lg-8 p-3 mb-3" >
      <div class="p-3 border box">
        <h2><%= User.data[:title] %></h2>
        <%= render 'shared/form' %>
      </div>
    </div>
    <div style ="align-self: center;" class="col-sm col-lg-4 hidden-sm p-3 mb-3">
      <div class="p-3 border box">
        <h5 class="p-3"><%= User.data[:info_title] %></h5>
        <p class="p-3"><%= User.data[:info_text] %></p>
      </div>
    </div>
  </div>
</div>
<div class="container justify-content-between align-items-center">
  <%= render 'shared/footer' %>
</div>
 